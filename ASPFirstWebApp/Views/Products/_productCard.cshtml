@model ASPFirstWebApp.Models.ProductModel

<div id="card-number-@Model.Id"class="card" style="width: 18rem; margin:5px;">
    @{
        var s = Model.Name;
        var firstWord = s.IndexOf(" ") > -1 ? s.Substring(0, s.IndexOf(" ")) : s;
    }

    <img src="https://loremflickr.com/160/120/@firstWord?lock=@Model.Id" class="card-img-top">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>

        <p class="card-text"> @Html.DisplayFor(modelItem => Model.Price)</p>
        <a href="/products/ShowOneProduct/@Model.Id" class="btn btn-dark">Details</a>
        <a href="/products/ShowEditForm/@Model.Id" class="btn btn-light">Edit</a>
        <a href="/products/ProcessDelete/@Model.Id" class="btn btn-danger">Delete</a>

        <button type="button" class="btn btn-primary edit-product-button" data-bs-toggle="modal" value="@Model.Id" data-bs-target="#editForm">
            Launch demo modal
        </button>
    </div>
</div>